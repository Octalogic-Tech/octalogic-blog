{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/interfaces/*": ["./interfaces/*"],
      "@/components/*": ["./components/*"],
      "@/pages/*": ["./pages/*"],
      "@/routes/*": ["./routes/*"],
      "@/constants/*": ["./constants/*"],
      "@/layouts/*": ["./layouts/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/atoms/*": ["./atoms/*"],
      "@/types/*": ["./types/*"],
      "@/schemas/*": ["./schemas/*"],
      "@/images/*": ["./images/*"],
      "@/config/*": ["./config/*"],
      "@/helpers/*": ["./helpers/*"],
      "@/utils/*": ["./utils/*"],
      "@/features/*": ["./features/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".next"]
}
